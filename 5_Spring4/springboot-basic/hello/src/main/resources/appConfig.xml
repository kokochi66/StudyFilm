<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="memberService" class="sample2.kokochi.hello.member.service.MemberServiceImpl">
        <constructor-arg name="memberRepository" ref="memberRepository" />
    </bean>
    <bean id="memberRepository" class="sample2.kokochi.hello.member.repository.MemoryMemberRepositoryImpl" />
    <bean id="discountPolicy" class="sample2.kokochi.hello.discount.RateDiscountPolicyImpl" />
    <bean id="orderService" class="sample2.kokochi.hello.order.OrderServiceImpl">
        <constructor-arg name="memberRepository" ref="memberRepository" />
        <constructor-arg name="discountPolicyImpl" ref="discountPolicy" />
    </bean>
</beans>